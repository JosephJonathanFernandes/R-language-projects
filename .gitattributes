* text=auto

# Enforce LF for source files commonly used on cross-platform
*.R text eol=lf
*.r text eol=lf
*.Rmd text eol=lf
*.qmd text eol=lf
*.sh text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.md text eol=lf

# Windows scripts keep CRLF
*.ps1 text eol=crlf
*.bat text eol=crlf
*.cmd text eol=crlf
