root = true

[*]
end_of_line = lf
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.{ps1,bat,cmd}]
end_of_line = crlf

[*.R]
indent_style = space
indent_size = 2

[*.{Rmd,qmd,md}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
